
<%- include('../comunes/cabecera') %>




<div class='container'>
    <!--  !== ! = =      -->
    <% const existeMensaje = typeof datos.mensaje !== 'undefined'%>
    <% if(existeMensaje){%>
        <div class="alert alert-success" role="alert">
            <%= datos.mensaje%>
        </div>
    <%}%>

    <h1>Crear usuario</h1>
    <form action='/guitarra/crear-guitarra-form' method='post'>
        <div class="mb-3">
            <label for="nombre" class="form-label">
                Nombre de Guitarra*
            </label>
            <input placeholder="Ej: Ibanez"
                   type="text"
                   name="nombre"
                   class="form-control"
                   id="nombre"
                   aria-describedby="ayudaNombre">
            <div id="ayudaNombre" class="form-text">

            </div>
        </div>

        <div class="mb-3">
            <label for="fechaLlegada" class="form-label"> Fecha de Llegada </label>
            <input placeholder="Ej: 2021-02-09"
                   type="date"
                   name="fechaLlegada"
                   class="form-control"
                   id="fechaLlegada"
                   aria-describedby="ayudafechaLlegada">
            <div id="ayudafechaLlegada" class="form-text"> Ingrese la fecha de llegada. </div>
        </div>

        <div class="mb-3">
            <label><input type="checkbox" id="puenteFlotante" name="puenteFlotante"> Tipo de Puente Flotante</label>
        </div>

        <div class="mb-3">
            <label for="precio" class="form-label">
                Precio*
            </label>
            <input
                   type="text"
                   name="precio"
                   class="form-control"
                   id="precio"
                   aria-describedby="precioNombre">
            <div id="precio" class="form-text">

            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Crear</button>
    </form>
</div>



<%- include('../comunes/footer') %>